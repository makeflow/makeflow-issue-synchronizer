{
  "name": "makeflow-gitlab-issue-synchronizer",
  "displayName": "GitLab Issue Synchronizer",
  "description": "GitLub Issue Synchronizer for Makeflow",
  "configs": [
    {
      "name": "gitlab-url",
      "displayName": "GitLab 地址"
    },
    {
      "name": "gitlab-token",
      "displayName": "GitLab Token"
    },
    {
      "name": "gitlab-project-name",
      "displayName": "项目名 (namespace/project)"
    },
    {
      "name": "sync-tags",
      "displayName": "同步标签列表 (用 ',' 分隔, '*' 表示全部同步, '#' 表示不同步)"
    },
    {
      "name": "sync-stage-tags",
      "displayName": "是否同步任务阶段标签 ('#' 为不同步)"
    }
  ],
  "powerTags": [
    {
      "name": "gitlab-issue-synchronizer",
      "displayName": "GitLab Issue Synchronizer",
      "description": "GitLab Issue Synchronizer for Makeflow",
      "hookBaseURL": "http://localhost:8888/gitlab-issue-synchronizer",
      "inputs": [
        {
          "name": "gitlab-url",
          "displayName": "GitLab 地址",
          "default": {
            "type": "app-config",
            "configName": "gitlab-url"
          }
        },
        {
          "name": "gitlab-token",
          "displayName": "GitLab Token",
          "default": {
            "type": "app-config",
            "configName": "gitlab-token"
          }
        },
        {
          "name": "gitlab-project-name",
          "displayName": "项目名 (namespace/project)",
          "default": {
            "type": "app-config",
            "configName": "gitlab-project-name"
          }
        },
        {
          "name": "sync-tags",
          "displayName": "同步标签列表 (用 ',' 分隔, '*' 表示全部同步, 留空或 '#' 为不同步)",
          "default": {
            "type": "app-config",
            "configName": "sync-tags"
          }
        },
        {
          "name": "sync-stage-tags",
          "displayName": "是否同步任务阶段标签 (留空或 '#' 为不同步)",
          "default": {
            "type": "app-config",
            "configName": "sync-stage-tags"
          }
        },
        {
          "name": "task-stage",
          "displayName": "任务状态",
          "bind": {
            "type": "resource-property",
            "propertyName": "stage"
          }
        },
        {
          "name": "task-brief",
          "displayName": "任务简述",
          "bind": {
            "type": "resource-property",
            "propertyName": "brief"
          }
        },
        {
          "name": "task-description",
          "displayName": "任务描述",
          "bind": {
            "type": "resource-property",
            "propertyName": "description"
          }
        },
        {
          "name": "task-tags",
          "displayName": "任务标签",
          "bind": {
            "type": "resource-property",
            "propertyName": "tags"
          }
        },
        {
          "name": "task-non-done-active-nodes",
          "displayName": "任务未完成的已激活节点",
          "bind": {
            "type": "resource-property",
            "propertyName": "nonDoneActiveNodes"
          }
        }
      ]
    }
  ]
}
