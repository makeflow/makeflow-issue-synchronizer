{
  "name": "makeflow-github-issue-synchronizer",
  "displayName": "GitHub Issue Synchronizer",
  "description": "GitHub Issue Synchronizer for Makeflow",
  "configs": [
    {
      "name": "github-api-url",
      "displayName": "GitHub API 地址"
    },
    {
      "name": "github-token",
      "displayName": "GitHub Token"
    },
    {
      "name": "github-project-name",
      "displayName": "项目名 (owner/repository)"
    },
    {
      "name": "sync-tags",
      "displayName": "同步标签列表 (用 ',' 分隔, '*' 表示全部同步, 'off' 表示不同步)"
    },
    {
      "name": "sync-stage-tags",
      "displayName": "是否同步任务阶段标签 ('on' 为同步)"
    }
  ],
  "powerTags": [
    {
      "name": "github-issue-synchronizer",
      "displayName": "GitHub Issue Synchronizer",
      "description": "GitHub Issue Synchronizer for Makeflow",
      "hookBaseURL": "http://localhost:8888/github-issue-synchronizer",
      "inputs": [
        {
          "name": "github-api-url",
          "displayName": "GitHub API 地址",
          "default": {
            "type": "app-config",
            "configName": "github-api-url"
          }
        },
        {
          "name": "github-token",
          "displayName": "GitHub Token",
          "default": {
            "type": "app-config",
            "configName": "github-token"
          }
        },
        {
          "name": "github-project-name",
          "displayName": "项目名 (owner/repository)",
          "default": {
            "type": "app-config",
            "configName": "github-project-name"
          }
        },
        {
          "name": "sync-tags",
          "displayName": "同步标签列表 (用 ',' 分隔, '*' 表示全部同步, 留空或 'off' 为不同步)",
          "default": {
            "type": "app-config",
            "configName": "sync-tags"
          }
        },
        {
          "name": "sync-stage-tags",
          "displayName": "是否同步任务阶段标签 ('on' 为同步)",
          "default": {
            "type": "app-config",
            "configName": "sync-stage-tags"
          }
        },
        {
          "name": "task-stage",
          "displayName": "任务状态",
          "bind": {
            "type": "resource-property",
            "propertyName": "stage"
          }
        },
        {
          "name": "task-brief",
          "displayName": "任务简述",
          "bind": {
            "type": "resource-property",
            "propertyName": "brief"
          }
        },
        {
          "name": "task-description",
          "displayName": "任务描述",
          "bind": {
            "type": "resource-property",
            "propertyName": "description"
          }
        },
        {
          "name": "task-tags",
          "displayName": "任务标签",
          "bind": {
            "type": "resource-property",
            "propertyName": "tags"
          }
        },
        {
          "name": "task-non-done-active-nodes",
          "displayName": "任务未完成的已激活节点",
          "bind": {
            "type": "resource-property",
            "propertyName": "nonDoneActiveNodes"
          }
        }
      ]
    }
  ]
}
