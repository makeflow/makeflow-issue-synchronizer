{
  "tasks": {
    "start-server": {
      "executable": "node",
      "args": ["bld/program/main.js"],
      "watch": [".config/**/*", "bld/program/**/*.js"]
    },
    "build-server": {
      "executable": "node",
      "cwd": ".",
      "env": {
        "TSC_WATCHFILE": "UseFsEventsWithFallbackDynamicPolling"
      },
      "args": [
        "node_modules/typescript/bin/tsc",
        "--project",
        "src/program/tsconfig.json",
        "--watch"
      ],
      "problemMatcher": "$typescript:tsc-watch"
    }
  }
}
